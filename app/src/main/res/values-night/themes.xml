<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for dark mode -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/accent_dark</item>
        
        <!-- Card colors -->
        <item name="cardBackgroundColor">#2D2D2D</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        
        <!-- Status colors -->
        <item name="colorActive">#64B5F6</item>       <!-- Light Blue -->
        <item name="colorInactive">#757575</item>     <!-- Darker Grey -->
        <item name="colorTicketsFound">#81C784</item> <!-- Light Green -->
        
        <!-- Background colors -->
        <item name="backgroundColor">#121212</item>
        <item name="dialogBackgroundColor">#2D2D2D</item>
    </style>
</resources>